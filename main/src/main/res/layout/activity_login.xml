<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    tools:context="cn.edu.bupt.niclab.ui.LoginActivity">

    <TextView
        android:text="快速登录"
        android:textSize="16sp"
        android:id="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_below="@id/title"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/login_qq"
            android:onClick="loginByQQ"
            android:padding="0dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/account_sdk_qq_login"
            android:src="@drawable/account_sdk_qq_login_src"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/login_sina_weibo"
            android:onClick="loginBySinaWeibo"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/account_sdk_weibo_login"
            android:src="@drawable/account_sdk_weibo_login_src"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </LinearLayout>
</RelativeLayout>
