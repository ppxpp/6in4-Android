<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/app_item_bg"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent" android:layout_height="90dp">
    <ImageView
        android:id="@+id/icon"
        android:focusable="false"
        android:src="@drawable/icon_default"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:scaleType="fitXY"
        android:layout_width="75dp"
        android:layout_height="75dp" />


    <Button
        android:id="@+id/install_btn"
        android:text="@string/state_normal"
        android:textColor="#fff"
        android:minWidth="1dp"
        android:textSize="15sp"
        android:minHeight="1dp"
        android:focusable="false"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:background="@drawable/app_item_install_btn_bg"
        android:layout_width="98dp"
        android:layout_height="35dp" />
    
    <TextView
        android:id="@+id/name"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/icon"
        android:layout_marginLeft="3dp"
        android:layout_toLeftOf="@id/install_btn"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/label"
        android:text="@string/app_label"
        android:textSize="16sp"
        android:layout_below="@id/name"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/icon"
        android:layout_marginLeft="10dp"
        android:textColor="#353535"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    

    <com.daimajia.numberprogressbar.NumberProgressBar
        android:id="@+id/number_progress_bar"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@id/label"
        android:layout_toRightOf="@id/icon"
        android:layout_toLeftOf="@id/install_btn"
        style="@style/NumberProgressBar_Default"
        />
</RelativeLayout>